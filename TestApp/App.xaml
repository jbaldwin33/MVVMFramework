<Application x:Class="TestApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TestApp"
             xmlns:views="clr-namespace:TestApp.Views"
             xmlns:viewModels="clr-namespace:MVVMFramework.ViewModels"
             xmlns:style="clr-namespace:MVVMFramework.Controls;assembly=MVVMFramework">
  <Application.Resources>

    <Style TargetType="Rectangle"/>
    <DataTemplate DataType="{x:Type viewModels:ProgressBarViewModel}">
      <views:ProgressBarView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type local:TestViewModel}">
      <local:MainWindow/>
    </DataTemplate>
  </Application.Resources>
</Application>
